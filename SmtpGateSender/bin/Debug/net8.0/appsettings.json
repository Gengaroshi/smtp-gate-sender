{
  "ListenUrls": "http://0.0.0.0:8885",
  "Spool": {
    "Root": "./data/spool",
    "IdempotencyHours": 24,
    "MaxBodyChars": 200000,
    "MaxSubjectChars": 300
  },
  "RateLimit": {
    "Enabled": true,
    "RequestsPerMinutePerIp": 60
  },
  "Smtp": {
    "Host": "mailhog",
    "Port": 1025,
    "UseSsl": false,
    "User": "",
    "Pass": "",
    "From": "demo@homelab.local",
    "TimeoutSeconds": 20
  },
  "Worker": {
    "PollIntervalMs": 1500,
    "MaxParallelSends": 2,
    "MaxAttempts": 8
  },
  "Logging": {
    "File": {
      "Enabled": true,
      "Directory": "./data/logs",
      "MinLevel": "Information"
    }
  },
  "Retention": {
    "Enabled": true,
    "RunEveryMinutes": 60,
    "Logs": {
      "Days": 14
    },
    "Spool": {
      "SentDays": 14,
      "FailedDays": 30,
      "IdemDays": 7,
      "QueuedMaxAgeDays": 0
    }
  }
}